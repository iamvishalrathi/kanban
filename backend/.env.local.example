# Alternative Environment Configuration for Local Development
# Copy this to .env.local when network connectivity is poor

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (SQLite for local development)
DATABASE_URL=sqlite:./dev-database.sqlite
DB_DIALECT=sqlite

# Redis Configuration (Disabled for local development)
REDIS_ENABLED=false
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-local-development-secret-key-here
JWT_EXPIRES_IN=7d

# SendGrid Configuration (Disabled for local development)
SENDGRID_ENABLED=false
# SENDGRID_API_KEY=your-sendgrid-key
# SENDGRID_FROM_EMAIL=your-email@example.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (Disabled without Redis)
RATE_LIMIT_ENABLED=false
